{
  "compilerOptions": {
    "target": "es6",
    "types": ["jest", "node"],
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "node",
    "rootDir": "src",
    "baseUrl": "./src",
    "paths": {
      "@data/*": ["./data/*"],
      "@domain/*": ["./domain/*"],
      "@infra/*": ["./infra/*"]
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": false, // provisorio
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./src"],
  "exclude": ["./node_modules"]
}
